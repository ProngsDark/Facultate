@model ArticleCategory.Models.Article

@{
    ViewBag.Titlu = "Adaugare articol";
}

<h1>@ViewBag.Titlu</h1>
<hr />
@using (Html.BeginForm(actionName: "New", controllerName: "Article"))
{
    @Html.HiddenFor(m => m.UserId);

    @Html.Label("Title", "Titlu Articol");
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" });
    <br />
    <br />

    @Html.Label("Content", "Continut Articol")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" });
    <br />
    <br />
    @Html.Hidden("Date", DateTime.Now, new { @class = "form-control" })

    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"), "Selectati categoria", new { @class = "form-control" });
    @Html.ValidationMessageFor(m => m.CategoryId,null, new { @class = "text-danger" });
    <br />

    <button class="btn btn-sm btn-success" type="submit">Adauga articol</button>
}

<br />
<br />
<a class="btn btn-sm btn-info" href="/Article/Index">Inapoi</a>