@model ArticleCategory.Models.Category

@{
    ViewBag.Title = "Editare categorie";
}

<h1>@ViewBag.Title</h1>
<hr />

<form method="post" action="/Category/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Label("CategoryName", "Nume Categorie")
    @Html.EditorFor(m => m.CategoryName)
    @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
    <br /><br />
    @Html.HiddenFor(m => m.CategoryId)

    <button class="btn btn-sm btn-success" type="submit">Modifica categoria</button>
</form>
