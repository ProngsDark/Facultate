@model Laborator4.Models.Category

@{
    ViewBag.Title = "Adaugare categorie";
}

<h2>@ViewBag.Title</h2>
<br />

<form method="post" action="/Category/New">
    @Html.HiddenFor(m => m.CategoryId);

    @Html.Label("CategoryName", "Nume Categorie")
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName, "Numele categoriei este obligatoriu", new { @class = "text-danger" })
    <br /> <br />

    <button class="btn btn-sm btn-success" type="submit">Adauga categorie</button>
</form>

<br />
<a class="btn btn-sm btn-info" href="/Category/Index">Inapoi</a>